@page
@model MyScriptureJournal.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="scriptures.Scriptureid" />
            <div class="form-group">
                <label asp-for="scriptures.Book" class="control-label"></label>
                <input asp-for="scriptures.Book" class="form-control" required />
                <span asp-validation-for="scriptures.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="scriptures.ChapterSection" class="control-label"></label>
                <input asp-for="scriptures.ChapterSection" class="form-control" />
                <span asp-validation-for="scriptures.ChapterSection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="scriptures.Verses" class="control-label"></label>
                <input asp-for="scriptures.Verses" class="form-control" />
                <span asp-validation-for="scriptures.Verses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="scriptures.Notes" class="control-label"></label>
                <input asp-for="scriptures.Notes" class="form-control" required/>
                <span asp-validation-for="scriptures.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="scriptures.DateCreated" class="control-label"></label>
                <input asp-for="scriptures.DateCreated" class="form-control" />
                <span asp-validation-for="scriptures.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
