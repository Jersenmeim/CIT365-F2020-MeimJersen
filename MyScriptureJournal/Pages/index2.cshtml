@page
@model MyScriptureJournal.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

<form>
    <div class="input-group" style="margin: 5px 0" >
        <input name="search" asp-route-search="" placeholder="Search by book" style="padding: 0 5px">
        <div class="input-group-append">
            <button class="btn btn-dark" type="submit" >Search</button>
        </div>
    </div>

    <div class="input-group" style="margin: 5px 0" >
        <input name="searchNote" asp-route-search="" placeholder="Search by note" style="padding: 0 5px">
        <div class="input-group-append">
            <button class="btn btn-dark" type="submit" >Search</button>
        </div>
    </div>

   
   
    
    
     <div style="margin: 10px 0">
         <a class="btn btn-success" asp-page="./index2">Back to List</a>
    </div>

</form>

<table class="table table-striped table-hover table-light">
    <thead class="thead-dark">
        <tr>
            <th>
                <a class="text-light" asp-page="./Index2" asp-route-sortOrder="@Model.BookSort">
                    <i class="fas fa-sort"></i> @Html.DisplayNameFor(model => model.Scriptures[0].fbook)
                </a>
            </th>
            
            
            <th>
                <a class="text-light" asp-page="./Index2" asp-route-sortOrder="@Model.DateSort">
                    <i class="fas fa-sort"></i> @Html.DisplayNameFor(model => model.Scriptures[0].DateCreated)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-hover">
@foreach (var item in Model.Scriptures) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fbook)
            </td>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Scriptureid">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Scriptureid">Details</a> |
                <a   class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Scriptureid">Delete</a>
               

               
            </td>
        </tr>
}
    </tbody>
</table>
