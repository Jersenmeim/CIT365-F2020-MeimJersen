@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Films";
}


<div>
    <a style="margin: 10px 0;" class="btn btn-primary margin" asp-action="Create">Create New</a>
</div>



<form asp-controller="Movies" asp-action="Index">

        



     <input type="text" placeholder="Search By Book" name="SearchString"/>
     <input type="submit" value="Filter" />
</form>

     
    <div>
   <a> <i class="fa fa-sort"></i>
        @Html.ActionLink("Sort by Release Date", "Index", new { sortOrder = ViewBag.DateSortParm })
    </a>

    </div>

    <div>
     <a asp-action="Index">Back to List</a>
    </div>

    

     
       

            <div class="card-deck">
                @foreach (var item in Model)
                {
                     var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.jpg");
                    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                     

                     <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                       <div class="card-body">
                            <p class="card-title bold">@Html.DisplayFor(modelItem => item.Title)</p>
                            <p class="card-text">Release Date: @Html.DisplayFor(modelItem => item.ReleaseDate)</p>
                            <p class="card-text"> @Html.DisplayFor(modelItem => item.Genre.Description)</p>
                            <p class="card-text">Price: @Html.DisplayFor(modelItem => item.Price)</p>
                            <p class="card-text">Rating: @Html.DisplayFor(modelItem => item.Rating)</p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </div>
                    </div>
                }
            </div>
