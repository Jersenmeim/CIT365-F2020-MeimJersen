@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Delete";
    var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.jpg");
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-body">
            <img src="@Url.Content(@photoPath)" class="img-thumbnail" />
            <p class="card-title bold">@Html.DisplayFor(model => model.Title)</p>
            <p class="card-text">Release Date: @Html.DisplayFor(model => model.ReleaseDate)</p>
            <p class="card-text"> @Html.DisplayFor(model => model.Genre.Details)</p>
            <p class="card-text">Price: @Html.DisplayFor(model => model.Price)</p>
            <p class="card-text">Rating: @Html.DisplayFor(model => model.Rating)</p>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
